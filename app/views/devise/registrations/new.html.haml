.AccountMain
  = render partial: 'items/marketHeader'
  .AccountPage
    .AccountPage__form
      %h2 会員情報入力 (1/2)
      %hr/
      = form_with url: profiles_path, id: 'new_user', local: true do |f|
        = devise_error_messages!
        .FormField
          .FormField__label--normal
            = f.label "ニックネーム"
            %span.req 必須
          .FormField__input--normal
            = f.text_field :name, autofocus: true, placeholder: "例) フリマ太郎"
        .FormField
          .FormField__label--normal
            = f.label "メールアドレス"
            %span.req 必須
          .FormField__input--normal
            = f.email_field :email, placeholder: "PC・携帯どちらでも可"
        .FormField
          .FormField__label--normal
            = f.label "パスワード"
            %span.req 必須
            - if flash[:alert]
              パスワードが違います！
          .FormField__input--normal
            = f.password_field :password, autocomplete: "off", placeholder: "7文字以上の英数字"
        .FormField
          .FormField__label--normal
            = f.label "パスワード(確認)"
            %span.req 必須
          .FormField__input--normal
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードを再入力"
        .FormField
          .FormField__label--normal
            = f.label "お名前"
            %span.req 必須
          .FormField__input--name
            = f.text_field :familyname, autofocus: true, placeholder: "例) 吉田"
            = f.text_field :firstname, autofocus: true, placeholder: "例) 宗子"
          .FormField__label--normal
            = f.label "お名前(カナ)"
            %span.req 必須
          .FormField__input--name
            = f.text_field :familykana, autofocus: true, placeholder: "例) ヨシダ"
            = f.text_field :firstkana, autofocus: true, placeholder: "例) ソウス"
        .FormField
          .FormField__label--normal
            = f.label "生年月日"
            %span.req 必須
          .FormField__select--short
            = f.select :birthyear, (1900..2020).to_a.reverse, {selected: 1980}, { class: 'FormField__select--date' }
            年
            = f.select :birthmonth, (1..12).to_a, {selected: 1}, { class: 'FormField__select--date' }
            月
            = f.select :birthday, (1..31).to_a, {selected: 1}, { class: 'FormField__select--date' }
            日
        .actions
          = f.submit "次へ", class: 'UserButton'
  = render partial: 'items/marketFooter'
