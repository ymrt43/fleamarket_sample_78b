.Header 
  .HeaderInside
    .HeaderMain
      .Icon
        = link_to root_path do
          = image_tag 'logo.png', size:'140x41', class: 'Icon__logo'
      .SearchBox
        = form_with(method: :get, class: "form") do |form|
          = form.text_field :text, placeholder: "キーワードから探す", class: "input"
          = button_tag type: 'submit', class: 'btn' do
            .Searchbox__icon
              = link_to "#" do
                = image_tag 'icon-search 1.png', size:'20x20'
    .Nav
      %ul.ListLeft
        = render partial: 'items/header.child'
          
        %li.ListLeft__item2
          = link_to "#", class:"brand" do
            ブランド
      %ul.ListRight
        - if !request.path_info.eql?(new_profile_path) && !request.path_info.eql?(new_user_registration_path)
          - if user_signed_in?
            %li.ListRight__item
              = link_to users_path, class:"my-page" do
                マイページ
          - else
            %li.ListRight__item1
              = link_to new_user_session_path, class:"login" do
                ログイン
            %li.ListRight__item2
              = link_to new_user_registration_path, class:"new" do
                新規会員登録
